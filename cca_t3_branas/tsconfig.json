{
    "compilerOptions": {
        "baseUrl": "src",
        "rootDir": "src",
        "paths": {
            "@/*": ["*"]
        },
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true, // depende do seu nível de conhecimento em TypeScript, recomendo começar com false
        "esModuleInterop": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}